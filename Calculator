<body>
    <div class="calculator">
        <h1>Renewable Energy Power Calculator</h1>
        
        <div class="calculator-section">
            <h2>Solar Power Calculation</h2>
            <div class="input-group">
                <label>Solar Panel Area <span class="unit">(m²)</span></label>
                <input type="number" id="solarArea" step="0.1" min="0" placeholder="Enter area">
            </div>
            <div class="input-group">
                <label>Daily Sunlight Hours <span class="unit">(hours/day)</span></label>
                <input type="number" id="sunlightHours" step="0.5" min="0" max="24" placeholder="Enter hours">
            </div>
            <button id="calculateSolar">Calculate Solar Power</button>
            <div class="result" id="solarResult"></div>
            <div class="error" id="solarError"></div>
        </div>

        <div class="calculator-section">
            <h2>Wind Power Calculation</h2>
            <div class="input-group">
                <label>Turbine Blade Radius <span class="unit">(meters)</span></label>
                <input type="number" id="bladeRadius" step="0.1" min="0" placeholder="Enter radius">
            </div>
            <div class="input-group">
                <label>Average Wind Speed <span class="unit">(m/s)</span></label>
                <input type="number" id="windSpeed" step="0.1" min="0" placeholder="Enter speed">
            </div>
            <div class="input-group">
                <label>Daily Operating Hours <span class="unit">(hours/day)</span></label>
                <input type="number" id="windHours" step="0.5" min="0" max="24" placeholder="Enter hours">
            </div>
            <button id="calculateWind">Calculate Wind Power</button>
            <div class="result" id="windResult"></div>
            <div class="error" id="windError"></div>
        </div>
    </div>

    <script>
        // Constants
        const SOLAR_PANEL_EFFICIENCY = 0.20; // 20% efficiency
        const SOLAR_IRRADIANCE = 1; // 1 kW/m² standard test conditions
        const AIR_DENSITY = 1.225; // kg/m³ at sea level
        const WIND_TURBINE_EFFICIENCY = 0.35; // 35% system efficiency

        // Solar Power Calculation
        document.getElementById('calculateSolar').addEventListener('click', () => {
            const area = parseFloat(document.getElementById('solarArea').value);
            const hours = parseFloat(document.getElementById('sunlightHours').value);
            const errorElement = document.getElementById('solarError');
            const resultElement = document.getElementById('solarResult');

            errorElement.textContent = '';
            resultElement.textContent = '';

            if (!validateInputs([area, hours], ['Area', 'Sunlight hours'])) {
                errorElement.textContent = 'Please enter valid positive numbers';
                return;
            }

            const power = area * SOLAR_IRRADIANCE * SOLAR_PANEL_EFFICIENCY;
            const dailyEnergy = power * hours;
            resultElement.innerHTML = `
                Daily Solar Energy Production: <strong>${dailyEnergy.toFixed(2)} kWh</strong><br>
                <small>Calculation: ${area}m² × ${SOLAR_IRRADIANCE}kW/m² × ${SOLAR_PANEL_EFFICIENCY} efficiency × ${hours}h</small>
            `;
        });

        // Wind Power Calculation
        document.getElementById('calculateWind').addEventListener('click', () => {
            const radius = parseFloat(document.getElementById('bladeRadius').value);
            const windSpeed = parseFloat(document.getElementById('windSpeed').value);
            const hours = parseFloat(document.getElementById('windHours').value);
            const errorElement = document.getElementById('windError');
            const resultElement = document.getElementById('windResult');

            errorElement.textContent = '';
            resultElement.textContent = '';

            if (!validateInputs([radius, windSpeed, hours], ['Radius', 'Wind speed', 'Operating hours'])) {
                errorElement.textContent = 'Please enter valid positive numbers';
                return;
            }

            const sweptArea = Math.PI * Math.pow(radius, 2);
            const windPower = 0.5 * AIR_DENSITY * sweptArea * Math.pow(windSpeed, 3) * WIND_TURBINE_EFFICIENCY;
            const dailyEnergy = (windPower * hours) / 1000; // Convert to kWh

            resultElement.innerHTML = `
                Daily Wind Energy Production: <strong>${dailyEnergy.toFixed(2)} kWh</strong><br>
                <small>Calculation: 0.5 × ${AIR_DENSITY}kg/m³ × ${sweptArea.toFixed(2)}m² × ${windSpeed}m/s³ × ${WIND_TURBINE_EFFICIENCY} efficiency × ${hours}h ÷ 1000</small>
            `;
        });

        // Validation function
        function validateInputs(values, labels) {
            return values.every((value, index) => {
                if (isNaN(value) || value <= 0) {
                    alert(`Please enter a valid positive number for ${labels[index]}`);
                    return false;
                }
                return true;
            });
        }
    </script>
</body>
</html>
