
<EnergyTabbedPanel>:
    tab_pos: 'top_mid'
    tab_width: root.width/2
    background_color: (0.9, 0.9, 0.9, 1)
    
    TabbedPanelItem:
        text: 'Solar Calculator'
    TabbedPanelItem:
        text: 'Wind Calculator'

<TextInput>:
    size_hint_y: None
    height: dp(40)
    padding: [dp(10), dp(10)]
    background_color: (1, 1, 1, 1)
    foreground_color: (0, 0, 0, 1)
    
<Label>:
    font_size: dp(16)
    bold: True
    
<Button>:
    background_color: (0.2, 0.6, 1, 1)
    color: (1, 1, 1, 1)
    font_size: dp(16)
    bold: True
